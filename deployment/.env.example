NGINX_TAG=alpine
CURL_TAG=8.18.0

# ---------------------------------
# Host port configuration
# ---------------------------------
MARKET_API_PORT=65001
MARKET_ODOO_ADAPTER_PORT=65002
MARKET_CODE_DISPENSER_PORT=65003
MARKET_POSTGRES_PORT=65004

# ---------------------------------
# Database server configuration
# ---------------------------------

# Image tag
POSTGRES_TAG=17-alpine

# Admin credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;

# ---------------------------------
# Market API configuration
# ---------------------------------

# Image tag
MARKET_API_TAG=sha-8fe8fca

# External domain
DOMAIN_NAME=;;;;;;;;;;;;;set external domain;;;;;;;;;;;;;
PUBLIC_BASE_URL=;;;;;;;;;;;;;set external URL of the market-api;;;;;;;;;;;;;

# CORS Configuration
ALLOWED_ORIGINS=*
MARKET_AUTH_ALLOWED_DOMAINS=*

# IPFS
IPFS_GATEWAY_URL=;;;;;;;;;;;;;set ipfs http-gateway url;;;;;;;;;;;;;
IPFS_RPC_URL=;;;;;;;;;;;;;set ipfs rpc-aoi url;;;;;;;;;;;;;
IPFS_RPC_BEARER=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;

# Chain
RPC=;;;;;;;;;;;;;set gnosis chain rpc url;;;;;;;;;;;;;

# Secret that signs session JWTs
MARKET_JWT_SECRET=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;

# Outbound adapter auth (env-based shared secrets)
CIRCLES_SERVICE_KEY=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;

# Optional per-adapter overrides
# MARKET_ODOO_ADAPTER_TOKEN=
# MARKET_CODE_DISPENSER_TOKEN=

# Optional header name override (default X-Circles-Service-Key)
# MARKET_OUTBOUND_HEADER_NAME=

# Optional origin overrides
# MARKET_ODOO_ADAPTER_ORIGIN=http://market-adapter-odoo:${MARKET_ODOO_ADAPTER_PORT}
# MARKET_CODE_DISPENSER_ORIGIN=http://market-adapter-codedispenser:${MARKET_CODE_DISPENSER_PORT}

# Database name and credentials
DB_MARKET_API=circles_market_api
DB_MARKET_API_USER=market_api
DB_MARKET_API_PASSWORD=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;

# ---------------------------------
# Code Dispenser configuration
# ---------------------------------

# Image tag
MARKET_ADAPTER_CODEDISP_TAG=sha-8fe8fca

# Database name and credentials
DB_CODEDISP=circles_codedisp
DB_CODEDISP_USER=codedisp
DB_CODEDISP_PASSWORD=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;

# Codepool initialization directory (reads text files to seed code pools)
# CODE_POOLS_DIR=

# ---------------------------------
# Odoo configuration
# ---------------------------------
MARKET_ADAPTER_ODOO_TAG=sha-8fe8fca

DB_ODOO=circles_odoo
DB_ODOO_USER=odoo
DB_ODOO_PASSWORD=;;;;;;;;;;;;;set secret;;;;;;;;;;;;;
